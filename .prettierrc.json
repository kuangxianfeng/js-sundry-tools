{
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "printWidth": 150,
    "tabWidth": 4,
    "arrowParens": "avoid",
    "htmlWhitespaceSensitivity": "ignore",
    "overrides": [
        {
            "files": ".prettierrc",
            "options": {
                "parser": "json"
            }
        },
        {
            "files": "*.md",
            "options": {
                "tabWidth": 2
            }
        }
    ]
}